@using AppliancesShop_Models.Enums
@model IEnumerable<LogEntry>


<form method="get">
    <div class="container p-4 my-3">
        <h2 class="text-info">Logs</h2>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Name..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone..." } })
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            <select class="form-select" name="searchLevel" asp-items="Html.GetEnumSelectList<LogLevel>()">
                                <option selected="selected" value="">--Log Level--</option>
                            </select>

                            @* @Html.DropDownListFor( "--Log Level--", new { @class = "form-select" }) *@
                        </div>
                        <div class="offset-4 col-4">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />

<div class="bg-white p-3">
    <ejs-grid id="Grid" dataSource="@Model" allowFiltering="true" allowSorting="true" allowPaging="true" clipMode="EllipsisWithTooltip">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>

            <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
            <e-grid-column field="LogLevel" headerText="Level" textAlign="Right"></e-grid-column>
            <e-grid-column field="Message" headerText="Message" textAlign="Right"></e-grid-column>
            <e-grid-column field="TimeStamp" headerText="Time" customFormat="@(new { type="date", format="MM/dd/yyyy" })" textAlign="Right"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>